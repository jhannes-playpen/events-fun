<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
       http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">

  <module-name>Events</module-name>

  <servlet>
    <servlet-name>apiController</servlet-name>
    <servlet-class>com.johannesbrodwall.events.ApiFrontServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>oauth2callback</servlet-name>
    <servlet-class>com.johannesbrodwall.events.web.Oauth2CallbackServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>authServlet</servlet-name>
    <servlet-class>com.johannesbrodwall.events.web.AuthServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>apiController</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>oauth2callback</servlet-name>
    <url-pattern>/oauth2callback</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>authServlet</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>

</web-app>